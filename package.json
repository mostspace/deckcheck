{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "type": "module",
  "lint-staged": {
    "*.php": "vendor/bin/pint --dirty",
    "*.blade.php": "blade-formatter --write",
    "*.{js,ts,jsx,tsx,css,scss,json,html,md}": "prettier --write"
  },
  "scripts": {
    "prepare": "husky",
    "format:php": "vendor/bin/pint",
    "format:blade": "blade-formatter --write \"resources/views/**/*.blade.php\"",
    "format:prettier": "prettier --write \"**/*.{js,ts,jsx,tsx,css,scss,json,html,md}\"",
    "build": "vite build",
    "dev": "vite"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/vite": "^4.0.0",
    "alpinejs": "^3.4.2",
    "autoprefixer": "^10.4.2",
    "axios": "^1.8.2",
    "blade-formatter": "^1.44.2",
    "concurrently": "^9.0.1",
    "husky": "^9.1.7",
    "laravel-vite-plugin": "^1.2.0",
    "lint-staged": "^16.2.3",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.1.0",
    "vite": "^6.2.4"
  }
}
